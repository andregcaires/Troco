@model Troco.Domain.Models.Change
@{
    ViewData["Title"] = "Novo Cálculo";
}

<div class="text-center">
    <h1 class="display-4">Calculadora de Troco</h1>

</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CalculateChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TotalValue" class="control-label"></label>
                <input required type="text" step="0.01" asp-for="TotalValue" class="form-control" id="TotalValue" />
                <span asp-validation-for="TotalValue" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="PaidValue" class="control-label"></label>
                <input required type="text" step="0.01" asp-for="PaidValue" class="form-control" id="PaidValue"  />
                <span asp-validation-for="PaidValue" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Calcular" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/js/indexValidators.js"></script>
@if (TempData["valuesError"] != null)
{
    <span class="text-danger">@TempData["valuesError"].ToString()</span>
}