@model Troco.Domain.Models.Change

@{
    ViewData["Title"] = "Calculadora de Troco";
}

<div>

    <dl class="row">
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.TotalValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalValue)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.PaidValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaidValue)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>Valor</th>
            <th>Quantidade</th>
        </tr>
        @foreach (var changeToReturn in Model.ChangeToReturn)
        {
            @if (changeToReturn.Quantity != 0)
            {
                <tr>
                    <td>@changeToReturn.Value</td>
                    <td>@changeToReturn.Quantity</td>
                </tr>
            }
        }
    </table>
</div>
